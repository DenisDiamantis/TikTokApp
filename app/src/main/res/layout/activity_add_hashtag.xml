<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myAPP.AddHashtag">

    <Button
        android:id="@+id/delete"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Delete hashtag"
        app:backgroundTint="#D61010"
        app:layout_constraintEnd_toEndOf="@+id/add_hashtag_btn"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/add_hashtag_btn"
        app:layout_constraintTop_toBottomOf="@+id/add_hashtag_btn" />

    <EditText
        android:id="@+id/video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:hint="Name of the video"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Hashtag "
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/video_name"
        app:layout_constraintStart_toStartOf="@+id/video_name"
        app:layout_constraintTop_toBottomOf="@+id/video_name" />

    <Button
        android:id="@+id/add_hashtag_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add Hashtag"
        app:backgroundTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="@+id/hashtag"
        app:layout_constraintStart_toStartOf="@+id/hashtag"
        app:layout_constraintTop_toBottomOf="@+id/hashtag" />
</androidx.constraintlayout.widget.ConstraintLayout>